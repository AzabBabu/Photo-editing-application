<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/BackBtnId"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/HomeBtnId"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BackBtnId"
        app:srcCompat="@drawable/home"
        android:contentDescription="TODO"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/ResultImageId"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BackBtnId"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ShareBtnId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/share_btn_background"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/fbBtnId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResultImageId"
        app:srcCompat="@drawable/share" />

    <ImageView
        android:id="@+id/fbBtnId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@+id/InsBtnId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ShareBtnId"
        app:layout_constraintTop_toTopOf="@+id/ShareBtnId"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/InsBtnId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@+id/teleBtnId"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fbBtnId"
        app:layout_constraintTop_toTopOf="@+id/ShareBtnId"
        app:srcCompat="@drawable/instagram" />

    <ImageView
        android:id="@+id/teleBtnId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/InsBtnId"
        app:layout_constraintTop_toTopOf="@+id/InsBtnId"
        app:srcCompat="@drawable/telegram" />
</androidx.constraintlayout.widget.ConstraintLayout>